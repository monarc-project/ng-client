<div class="logo-cases-bg"></div>

<div layout="row" layout-align="center center" class="md-main-content" ng-controller="ClientPasswordForgottenCtrl" flex>
    <div layout="column" flex flex-gt-sm="50" flex-gt-md="40" class="md-whiteframe-12dp" style="background: #424242; z-index:2">
        <div layout-align="center center" layout="row" class="md-padding">
            <img src="img/logo-cases.png" style="width: 30% ;margin: 10px 0 0 0">
        </div>

        <form layout="column" name="passwordForm" class="md-padding" ng-submit="resetPassword()">
            <p translate>Please type in and confirm your new password</p>

            <md-input-container flex>
                <label translate>New password</label>
                <md-icon>vpn_key</md-icon>
                <input ng-model="user.password" name="passwordnew" type="password" autocomplete="off" ng-minlength="9" required ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_])[A-Za-z\d\W_]{9,}/">
                <div ng-messages="passwordForm.passwordnew.$error" ng-messages-multiple>
                    <p ng-message="minlength" translate>Your password is too short (min 9 characters).</p>
                    <p ng-message="pattern" translate>Your password must contain at least: one uppercase, one number and one special character.</p>
                </div>
            </md-input-container>

            <md-input-container flex>
                <label translate>Confirm new password</label>
                <md-icon>vpn_key</md-icon>
                <input ng-model="user.confirm" type="password" required>
            </md-input-container>

            <div layout="row" layout-align="end center">
                <md-card class="md-card-crit" ng-if="user.password != user.confirm && user.password.length > 0 && user.confirm.length > 0">
                    <md-card-content>{{ 'Passwords mismatch.' | translate }}</md-card-content>
                </md-card>
                <span flex></span>
                <md-button class="md-primary" ng-click="resetPassword()" ng-disabled="user.password.length == 0 || user.password != user.confirm">{{ 'Reset password' | translate }}</md-button>
                <input type="submit" style="position: absolute; left: -99999px">
            </div>
        </form>
    </div>
</div>
